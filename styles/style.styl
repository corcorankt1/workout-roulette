////variables
gray = #373737
pink = #ee386b
yellow = #FAC90D
teal = #5FC6B5


body
	color gray

header
	text-align center
	background-image url("images/fitness-header.jpg")
	background-repeat no-repeat
	background-size cover
	height 400px
	background-position 0px -100px

header h1
	color yellow
	margin 0
	font-size 80px
	padding-top 100px


.exercises
	text-align center
	float none
	font-size 24px
	list-style none

.exercises li
	text-align left
	
.list
	background-color yellow
	
.row 
	padding-top 20px

.roulette
	text-align center
	margin 0px auto
	display inline-block
	color yellow

.roulette:visited
	color yellow
	text-transform none

.roulette:hover
	color teal

.restart
	color gray
	margin-top 25px

.restart:visited
	color gray
	text-transform none

.restart:hover
	color teal
	
.partial
	text-align center	
	
.part
	background-color yellow	
	height 610 px

blockquote
	text-align center
	font-size 36px
	font-style italic
	padding-top 50px
	padding-bottom 25px
	color pink

footer
	text-align center
	background-image url("images/fitness-footer.jpg")
	background-repeat no-repeat
	background-size cover
	height 350px
	color white


footer p
	padding-top 50px
	font-size 24px

